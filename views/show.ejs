<%- include("partials/header") %>

<div class="container mt-1">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">GundamFans</p>
            <div class="list-group">
                <li class="list-group-item active">分类</li>
                <li class="list-group-item">分类</li>
                <li class="list-group-item">分类</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card ">
                <div class="card-body">
                    <h3><%=ms.name%> </h3>  
                    <div class="row">
                        <div class="col-md-6 ">
                            <p><%- ms.description%></p>
                        </div>
                        <div class="col-md-6 text-center card">
                            <p><img class="img-responsive" src="<%= ms.img%>" style="width:100%"> </p>
                        </div>
                       
                    </div>  
                </div>
            </div>
           
            <div class="card border-info bg-light mt-1 container">
                <div class="text-right mt-2 mr-2"> <a href="/wiki/<%= ms._id%>/comment/new" class="btn btn-primary ">Add Comment</a></div>
                <hr>
                <%ms.comments.forEach(function(e){%>
                    <ul>
                        <li>
                            <strong><%= e.author.username %>:</strong> 
                            
                            <span class="float-right"><%= e.date.toLocaleDateString() %></span>
                            
                            <p><%- e.text %> </p> 
                        </li>
                    </ul>    
                <%});%>
    
                
            </div>

                
                
                
                
    

            
            
        </div>
    </div>

    
</div>


